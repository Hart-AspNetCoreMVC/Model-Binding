   @model IList<string>

       
@if (Model.Count == 0)
{
    <form action="CollectionBinding" method="post">
        @for (int i = 0; i < 3; i++)
        {
            <label >Name@(i+1):</label>
            <input name="names" class="form-control"/>
        }
            <input type="submit" name="name" value="Submit" />
    </form>
}
else
{
    foreach (var name in Model)
     {
         <h2>@name</h2>
     }
}